<div class="well well-sm">
  <div class="row">
    <div class="col-xs-6">
      <%= f.label :attribute_name, 'Filter associated model using' %>
      <%= f.text_field :attribute_name, class: 'form-control parameter-select' %>
    </div>
    <div class="col-xs-5">
      <%= f.label :value, 'Association filter value' %>
      <%= f.text_field :value, class: 'form-control parameter-select' %>
    </div>
    <div class="col-xs-1">
      <%= f.label :delete, "&nbsp;".html_safe %><br />
      <%= f.link_to_remove "<span class='btn btn-sm btn-danger'><span class='fas fa-times'></span></span>".html_safe, data: {confirm: 'Are you sure?  This cannot be undone unless you reload the page before saving.'} %>
    </div>
  </div>
</div>
